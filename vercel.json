{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/cron/generate-shipments.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/cron/cleanup-notifications.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/cron/generate-shipments",
      "destination": "/api/cron/generate-shipments"
    },
    {
      "source": "/api/cron/cleanup-notifications",
      "destination": "/api/cron/cleanup-notifications"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.ts"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,PUT,DELETE,PATCH,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/generate-shipments",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/cleanup-notifications",
      "schedule": "0 7 * * 1"
    }
  ]
}